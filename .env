# Configuration de l'application
APP_ENV=production
SECRET_KEY=kinebilan_secret_key_for_deployment_2024
DEBUG=False
PORT=5000

# Configuration de la base de données
DATABASE_URL=sqlite:///app.db

# Clés JWT
JWT_SECRET_KEY=kinebilan_jwt_secret_key_for_deployment_2024
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 heures en secondes

# Identifiants Doctolib (à remplacer par les vrais identifiants)
DOCTOLIB_EMAIL=demo@example.com
DOCTOLIB_PASSWORD=demo_password

# Configuration des notifications
# Email (à remplacer par les vrais identifiants)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=demo@gmail.com
SMTP_PASSWORD=demo_password
EMAIL_FROM=demo@gmail.com

# SMS (Twilio) (à remplacer par les vrais identifiants)
TWILIO_ACCOUNT_SID=demo_account_sid
TWILIO_AUTH_TOKEN=demo_auth_token
TWILIO_PHONE_NUMBER=+33600000000

# Firebase Cloud Messaging (Push) (à remplacer par les vrais identifiants)
FCM_API_KEY=demo_fcm_api_key
FCM_SENDER_ID=demo_fcm_sender_id

# Configuration Redis
REDIS_URL=redis://redis:6379/0

# Configuration de la planification
SYNC_FREQUENCY=4h  # Fréquence de synchronisation (1h, 4h, 12h, 24h)
NOTIFICATION_HOURS=08:00-20:00  # Plage horaire pour les notifications

# Paramètres métier
DELAI_MAX_BILAN=60  # Délai maximal entre bilans en jours
MARGE_ERREUR_JOURS=1  # Marge d'erreur pour les dates
ANNULATION_AUTO_ACTIVE=False  # Désactivation de l'annulation automatique pour le déploiement initial

# Canaux de notification actifs
CANAUX_NOTIFICATION=email 